<resources>

    <style name="Widget.MoleMapper.IconTabLayout" parent="@style/Widget.Backbone.IconTabLayout">
        <item name="tabIconColor">@android:color/white</item>
        <item name="tabIconIndicatorColor">@color/rsb_error</item>
        <item name="tabTextColor">@color/mm_tab_text_color</item>
    </style>

    <style name="Widget.MoleMapper.SubmitBar" parent="@style/Widget.Backbone.SubmitBar"/>

    <style name="Base.Widget.MoleMapper.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">56dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.Widget.MoleMapper.Toolbar.Title
        </item>
    </style>

    <style name="Widget.MoleMapper.Toolbar" parent="@style/Base.Widget.MoleMapper.Toolbar">
        <item name="android:foreground">?android:windowContentOverlay</item>
    </style>

    <style name="Widget.MoleMapper.Toolbar.Transparent"
           parent="@style/Base.Widget.MoleMapper.Toolbar">
        <item name="titleTextAppearance">
            @style/TextAppearance.Widget.MoleMapper.Toolbar.Title.Transparent
        </item>
    </style>

    <style name="Widget.MoleMapper.ActionButton.Overflow"
           parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="Widget.MoleMapper.Onboarding.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/mm_colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Widget.MoleMapper.Toolbar.Title"
           parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Widget.MoleMapper.Toolbar.Title.Transparent">
        <item name="android:textColor">@color/rsb_warm_gray</item>
    </style>

    <style name="Button.Borderless.Orange" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/mm_orange</item>
    </style>

    <style name="Button.Borderless.Blue" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/mm_colorPrimary</item>
    </style>

    <style name="Dialog.Body" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="colorAccent">@color/mm_colorPrimary</item>
        <item name="colorPrimary">@color/mm_colorPrimary</item>
        <item name="colorControlActivated">@color/mm_colorPrimary</item>
        <item name="colorControlNormal">@color/rsb_warm_gray</item>
    </style>

    <style name="Widget.MoleMapper.Chart.Progress" parent="@style/Widget.Backbone.Chart.Progress">
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="tabTextColor">#66255aa8</item>
        <item name="tabSelectedTextColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.MoleMapper.EmptyView" parent="">
        <item name="android:background">#d5e8ff</item>
        <item name="emptyIcon">@drawable/rsb_illo_dashboard_empty</item>
        <item name="emptyIconTint">?attr/colorPrimaryDark</item>
        <item name="emptyText">@string/default_empty_text</item>
        <item name="emptyTextAppearance">@style/TextAppearance.Widget.Backbone.EmptyView</item>
    </style>

    <style name="ChartTitleText">
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ChartTitleText.Dialog">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="ChartTabStyle">
        <item name="tabIndicatorColor">@color/mm_colorPrimary</item>
        <item name="tabBackground">@android:color/white</item>
        <item name="tabTextColor">@color/mm_colorPrimary40</item>
        <item name="tabSelectedTextColor">@color/mm_colorPrimary</item>
    </style>

    <style name="RemoveMoleOption">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/text_color_mole_inactive</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RemoveMoleIcon">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:tint">@color/text_color_mole_inactive</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextAppearance.Widget.Backbone.EmptyView" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PreferenceFragment.MoleMapper" parent="@style/PreferenceFragment.Material">
        <item name="android:divider">@null</item>
    </style>

    <style name="Backbone.Survey.Title" parent="">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:minHeight">@dimen/rsb_item_size_default</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/rsb_margin_left</item>
        <item name="android:paddingRight">@dimen/rsb_margin_right</item>
        <item name="android:paddingTop">@dimen/rsb_padding_medium</item>
        <item name="android:paddingBottom">@dimen/rsb_padding_medium</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">@dimen/rsb_text_size_title</item>
    </style>

    <style name="Backbone.Survey.Summary" parent="">
        <item name="android:layout_marginTop">@dimen/rsb_padding_wedge</item>
        <item name="android:layout_marginBottom">@dimen/rsb_padding_small</item>
        <item name="android:paddingLeft">@dimen/rsb_margin_left</item>
        <item name="android:paddingRight">@dimen/rsb_margin_right</item>
        <item name="android:paddingTop">@dimen/rsb_padding_wedge</item>
        <item name="android:paddingBottom">@dimen/rsb_padding_small</item>
    </style>

    <style name="Backbone.Survey.Summary.Link">
        <item name="android:layout_marginTop">@dimen/rsb_padding_wedge</item>
        <item name="android:paddingLeft">@dimen/rsb_margin_left</item>
        <item name="android:paddingRight">@dimen/rsb_margin_right</item>
        <item name="android:paddingTop">@dimen/rsb_padding_wedge</item>
        <item name="android:paddingBottom">@dimen/rsb_padding_small</item>
    </style>

    <style name="Widget.Backbone.IconTabLayout" parent="@style/Widget.Design.TabLayout">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">56dp</item>
        <item name="tabIconColor">@android:color/white</item>
        <item name="tabIconIndicatorColor">?attr/colorAccent</item>
        <item name="tabTextColor">@color/rsb_white_60</item>
        <item name="tabIndicatorColor">@android:color/white</item>
    </style>

    <style name="Widget.Backbone.TabLayout.Chart" parent="@style/Widget.Design.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="Widget.Backbone.SubmitBar" parent="">
        <item name="android:background">@color/rsb_submit_bar_gray</item>
        <item name="positiveActionTitle">@string/rsb_next</item>
        <item name="negativeActionTitle">@string/rsb_step_skip</item>
        <item name="positiveActionColor">?attr/colorAccent</item>
        <item name="negativeActionColor">@color/rsb_submit_bar_negative</item>
    </style>

    <style name="Widget.Backbone.SignatureView" parent="">
        <item name="signatureColor">?android:attr/textColorPrimary</item>
        <item name="signaturePrintColor">@android:color/black</item>
        <item name="signatureStrokeSize">1dp</item>
        <item name="hintText">@string/rsb_consent_signature_placeholder</item>
        <item name="hintTextColor">#ccc</item>
        <item name="hintTextSize">16sp</item>
        <item name="guidelineColor">#ccc</item>
        <item name="guidelineMargin">12dp</item>
        <item name="guidelineHeight">1dp</item>
    </style>

    <style name="Widget.Backbone.EmptyView" parent="">
        <item name="android:background">#d5e8ff</item>
        <item name="emptyIcon">@drawable/rsb_illo_dashboard_empty</item>
        <item name="emptyIconTint">?attr/colorPrimaryDark</item>
        <item name="emptyText">No data recorded yetâ€¦</item>
        <item name="emptyTextAppearance">@style/TextAppearance.Widget.Backbone.EmptyView</item>
    </style>

    <style name="Widget.Backbone.Chart" parent="">
        <item name="titleText">Amount of pie eaten</item>
        <item name="titleTextColor">@color/rsb_warm_gray</item>
        <item name="titleTextSize">14sp</item>
        <item name="titleTextTypeface">sans-serif-medium</item>
    </style>

    <style name="Widget.Backbone.Chart.Progress">
        <item name="centerTextFormat">@string/rsb_chart_progress_center</item>
        <item name="centerTextColor">?attr/colorPrimary</item>
        <item name="centerTextSize">20sp</item>
        <item name="centerTextTypeface">sans-serif-medium</item>
        <item name="finishText">Finish</item>
        <item name="finishTextColor">@color/rsb_error</item>
        <item name="tabIndicatorColor">@color/rsb_tab_indicator</item>
        <item name="tabTextColor">@color/rsb_tab_text_selected</item>
        <item name="tabSelectedTextColor">@color/rsb_tab_indicator</item>
    </style>

    <style name="Widget.Backbone.Chart.Pie">
        <item name="valueTextFormat">@string/rsb_chart_pie_value</item>
    </style>

    <style name="Widget.Backbone.Chart.Line">
        <item name="valueTextFormat">@string/rsb_chart_pie_value</item>
        <item name="chartXAxisTextColor">@color/rsb_warm_gray</item>
        <item name="chartXAxisTextSize">14sp</item>
        <item name="chartXAxisTextTypeface">sans-serif-medium</item>
        <item name="chartYAxisTextColor">@color/rsb_warm_gray</item>
        <item name="chartYAxisTextSize">14sp</item>
        <item name="chartYAxisTextTypeface">sans-serif-medium</item>
        <item name="expandTintColor">@color/rsb_warm_gray</item>
    </style>

    <style name="Widget.Backbone.Chart.Bar">
        <item name="chartXAxisTextColor">@color/rsb_warm_gray</item>
        <item name="chartXAxisTextSize">14sp</item>
        <item name="chartXAxisTextTypeface">sans-serif-medium</item>
        <item name="chartYAxisTextColor">@color/rsb_warm_gray</item>
        <item name="chartYAxisTextSize">14sp</item>
        <item name="chartYAxisTextTypeface">sans-serif-medium</item>
        <item name="expandTintColor">@color/rsb_warm_gray</item>
    </style>

    <style name="Widget.Backbone.Chart.Title" parent="">
        <item name="android:padding">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


</resources>
